{
    "name": "keyne/portfolio-professionnel",
    "description": "Portfolio professionnel moderne pour expert en Intelligence Artificielle et Machine Learning",
    "type": "project",
    "keywords": [
        "portfolio",
        "ai",
        "machine-learning",
        "php",
        "javascript",
        "responsive",
        "professional"
    ],
    "homepage": "https://keyne-ai.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Keyne",
            "email": "keyne@example.com",
            "homepage": "https://keyne-ai.com",
            "role": "AI & ML Expert"
        }
    ],
    "support": {
        "email": "keyne@example.com",
        "source": "https://github.com/keyne/portfolio-professionnel"
    },
    "require": {
        "php": ">=7.4.0",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "suggest": {
        "ext-gd": "Pour la manipulation d'images",
        "ext-imagick": "Pour le traitement avancé d'images",
        "ext-curl": "Pour les requêtes HTTP externes",
        "ext-zip": "Pour la compression de fichiers"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "App\\Controllers\\": "app/controllers/",
            "App\\Models\\": "app/models/",
            "App\\Core\\": "app/core/",
            "App\\Helpers\\": "app/helpers/"
        },
        "files": [
            "app/config/config.php",
            "app/helpers/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "init": "php app/init.php",
        "test": "phpunit",
        "cs-check": "phpcs --standard=PSR12 app/",
        "cs-fix": "phpcbf --standard=PSR12 app/",
        "serve": "php -S localhost:8000 -t .",
        "post-install-cmd": [
            "@init"
        ],
        "post-update-cmd": [
            "@init"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "archive": {
        "exclude": [
            "/tests",
            "/logs/*",
            "/tmp/*",
            "/.git",
            "/.gitignore",
            "/phpunit.xml",
            "/composer.lock"
        ]
    }
}
